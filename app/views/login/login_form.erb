<div class="login_form">
  <form action="/login" method="post">
    <table>
      <tr>
        <td class="error-text"><%= session["login_error"]%></td>
      </tr>
      <tr>
        <% if session["login_error"] %>
          <td><input class="error" type="text" name="username" placeholder="Username:" tabindex="1" required></td>
        <% else %>
          <td><input type="text" name="[username" placeholder="Username:" tabindex="1" required></td>
        <% end %>
      </tr>
      <tr>
        <td></td>
      </tr>
      <tr>
        <td><input type="password" name="password" placeholder="Password:" tabindex="2" required></td>
      </tr>
      <tr>

        <td><input type="submit" value="Login" tabindex="3"></td>
      </tr>
    </table>
  </form>
</div>